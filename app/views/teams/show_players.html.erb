<a href="/players">Player Index</a>

<h1>All Players</h1>
<%= link_to "Sort By Name", team_players_path(@team, sort_by: 'name') %>
<% @players.each do |player| %>
  <h3><a href="/players/<%= player.id %>"><%= player.name %></a></h3>
  <p> Drafted: <%= player.drafted %></p>
  <p> JerseyNumber: <%= player.jersey_num %></p>
  <p> Team: <%= player.team_id %></p>
<% end %>

<a href="<%= new_team_player_path(@team) %>">Create Player</a>

